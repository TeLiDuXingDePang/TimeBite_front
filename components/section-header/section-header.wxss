/* components/section-header/section-header.wxss */
.section-header {
  margin: 30rpx 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header.center {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-header.left {
  text-align: left;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.section-header.right {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.section-header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.section-header .subtitle {
  font-size: 24rpx;
  color: #888;
  font-weight: normal;
  margin-top: 6rpx;
} 