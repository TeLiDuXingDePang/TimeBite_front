/* 推送偏好设置页面样式 */
page {
  background-color: #f7f8fa;
  height: 100%;
  box-sizing: border-box;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 主页面容器 */
.preference-page {
  height: 100%;
  width: 100%;
  padding: 0 0 40rpx 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 主内容区域 */
.preference-content {
  flex: 1;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 主开关面板 */
.main-switch-panel {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 36rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.main-switch-info {
  flex: 1;
  padding-right: 30rpx;
}

.main-switch-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.main-switch-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.main-switch {
  transform: scale(1.1);
}

/* 分类标题 */
.category-header {
  margin: 30rpx 0 20rpx;
  padding: 0 10rpx;
}

.category-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  position: relative;
  padding-left: 24rpx;
  line-height: 1.5;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 30rpx;
  width: 8rpx;
  background-color: #4CAF50;
  border-radius: 4rpx;
}

/* 设置卡片 */
.setting-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.setting-category {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 600;
  padding: 26rpx 30rpx 6rpx;
  line-height: 1;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.setting-item.no-border {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  padding-right: 20rpx;
}

.setting-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 时间设置卡片 */
.time-card {
  padding: 20rpx 0;
}

.time-setting {
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx 24rpx;
}

.time-setting-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.time-picker-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.time-select {
  background-color: #f5f7fa;
  padding: 0;
  border-radius: 8rpx;
  min-width: 180rpx;
  text-align: center;
}

.time-value {
  font-size: 30rpx;
  color: #555;
  padding: 16rpx 24rpx;
  line-height: 1;
  font-weight: 500;
}

.time-divider {
  margin: 0 30rpx;
  color: #999;
  font-size: 28rpx;
}

.time-hint {
  background-color: #f8f9fc;
  margin: 16rpx 30rpx 10rpx;
  padding: 20rpx;
  border-radius: 12rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #888;
  line-height: 1.5;
}

/* 底部操作区 */
.action-area {
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 保存按钮 */
.btn-save {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 46rpx;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.2);
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
}

.btn-save:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.15);
}

/* 重置按钮 */
.btn-reset {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx;
  text-decoration: underline;
} 