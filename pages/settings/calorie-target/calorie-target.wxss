/* calorie-target.wxss */
page {
  background-color: #f8f8f8;
  height: 100%;
  box-sizing: border-box;
}

.page-scroll {
  height: 100%;
  width: 100%;
}

.container {
  padding: 20rpx 30rpx 50rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 公共卡片样式 */
.calorie-section, .goal-section, .data-section, .suggestion-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 特殊卡片样式覆盖 */
.suggestion-box {
  background-color: #f0f9eb;
  text-align: center;
}

/* 热量选择器内部样式 */
.current-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #4CAF50;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 自定义滑块容器 */
.slider-container {
  margin: 30rpx auto 20rpx;
  width: 90%;
  box-sizing: border-box;
  position: relative;
}

slider {
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}

.range-labels {
  display: flex;
  justify-content: space-between;
  color: #888;
  font-size: 24rpx;
  width: 100%;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding: 0 4rpx;
}

/* 健康目标选择样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.goal-group {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.goal-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.goal-item:last-child {
  border-bottom: none;
}

.goal-item.active {
  background-color: #f0f9eb;
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
}

/* 自定义radio按钮样式 */
.goal-item radio {
  transform: scale(0.8);
  margin-right: -10rpx;
}

.goal-info {
  margin-left: 20rpx;
  flex: 1;
}

.goal-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.goal-description {
  font-size: 24rpx;
  color: #666;
}

/* 基础数据样式 */
.data-card {
  border-radius: 10rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.data-item:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.data-value {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
  text-align: right;
  margin-left: 20rpx;
}

.data-value.picker {
  padding: 6rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  min-width: 160rpx;
  text-align: center;
}

/* 建议范围提示样式 */
.suggestion-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.suggestion-range {
  font-size: 34rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 保存按钮样式 */
.button-container {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.save-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  padding: 0;
} 